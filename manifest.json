{
  "name": "dot-shield",
  "version": "0.1.0",
  "description": "Dot Shield: A fast and simple ad blocker for dot browser",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["src/blockedDomains.js", "src/background.js"]
  },
  "browser_action": {
    "default_icon": "assets/shield.svg",
    "default_title": "Dot Shield",
    "default_popup": "src/popup.html"
  },
  "manifest_version": 2
}

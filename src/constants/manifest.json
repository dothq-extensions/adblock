{
  "name": "Dot Shield",
  "version": "0.1.0.a3",
  "description": "Dot Shield: A fast and simple ad blocker for dot browser",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "webNavigation",
    "http://*/",
    "https://*/",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/shield.svg",
    "theme_icons": [
      {
        "light": "icons/shieldDark.svg",
        "dark": "icons/shield.svg",
        "size": 16
      },
      {
        "light": "icons/shieldDark.svg",
        "dark": "icons/shield.svg",
        "size": 32
      }
    ],
    "default_title": "Dot Shield"
  },
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] }
}
